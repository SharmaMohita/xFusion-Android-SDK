<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#D32F2F</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--No title bar theme for Login Screen-->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <!-- Material Theme Settings -->
        <item name="colorPrimary">#D32F2F</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Hiding ToolBar-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColorHint">@color/color_blue_gray_900</item>
    </style>


    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ColorAccentSupplier">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
    </style>

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Requesting...</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">5</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/transparent</item>
    </style>
    <!-- AlertDialogBox Theme -->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
    </style>


    <style name="StandardTile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="cardBackgroundColor">#fff</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="TextAccentLarge">
    <item name="android:layout_width">140dp</item>
    <item name="android:layout_height">100dp</item>
    <item name="android:textColor">#FFF</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">24sp</item>

    </style>
    <style name="TextAccenntLarge">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textColor">#D32F2F</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>

    </style>
    <style name="StandardTile.WithPadding">
        <item name="contentPadding">12dp</item>
    </style>

    <style name="TextAccentSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#D32F2F</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextPrimarySmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
